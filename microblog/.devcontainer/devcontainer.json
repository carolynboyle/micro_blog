{
  "name": "Microblog Dev",
  "dockerFile": "Dockerfile",
  "workspaceFolder": "/workspace",
  "remoteUser": "devuser",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "forwardPorts": [5000],
  "initializeCommand": "chmod +x .devcontainer/selinux_setup.sh && .devcontainer/selinux_setup.sh",
  "postCreateCommand": "if [ -f requirements.txt ]; then pip install --user -r requirements.txt; fi",
  "runArgs": [
    "--security-opt", "label=type:container_t"
  ]
}
