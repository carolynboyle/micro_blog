{
    "name": "Python Web Dev",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "workspaceFolder": "/workspaces/blog",
    "forwardPorts": [5000],
    "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.debugpy"
            ]
        }
    },
    "remoteUser": "vscode"
}
